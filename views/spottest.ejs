<%- include("partials/header") -%>
<main class="bobaFett">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center container-profile m-3">
            <div
                class="col-lg-6 col-md-6 col-sm-0  d-none d-sm-block p-0 container-profile-gauche d-flex justify-content-center align-items-center">

                <img src="img/mountain.jpg" alt="photo du spot" style="max-width: 100%;">

            </div>
            <div
                class="col-lg-6 col-md-6 col-sm-12 p-0 container-profile-droite d-flex flex-column justify-content-between align-items-center">

                <h3>C'est fait !</h3>
                <h2>Ton spot est ajouté !</h2>
                <h1><%= data.name %></h1>
                <div
                    class="container-profile-description m-3 d-flex flex-column justify-content-center align-items-center">

                    <span>Détail de ton spot :</span>
                    <p class="p-3">
                        <span>Nom : </span><%= data.name %> <br><br>
                        <span>Description : </span><%= data.description %> <br><br>
                        <span>Adresse : </span><%= data.address %> <br><br>
                        <span>Niveau de difficulté : </span><%= data.difficulty %> <br><br>
                        <span>Coordonnées : </span>Longitude : <%= data.coordinates[0] %>, Latitude :
                        <%= data.coordinates[1] %><br></p>
                </div>
                <div class="container-profile-edition d-flex justify-content-center align-items-center">
                    <form method="" action="" class="m-3"><button type="button"
                            class="btn btn-secondary rounded-circle" onclick="location.href='/allspot';"
                            style="cursor: pointer;"><img src="/img/spot.png"></button></form>
                            
                    <form method="" action="" class="m-3"><button type="button"
                            class="btn btn-secondary rounded-circle" onclick="location.href='/spotform';"
                            style="cursor: pointer;"><i class="bi bi-pencil"></i></button></form> <br>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
    </div>
</main>
<%- include("partials/footer") -%>