<%- include("partials/header") -%>

    <main>
        <div class="col-12 flex-container-titre-form">
            <h1 class="titre-signup-signin">Proposer son spot</h1>
        </div>
        <div class="col-12 flex-container-signup-signin">
            <form method="post" action="/spotform" class="box-signup-signin height-signup">
                <label for="name">Nom du spot</label>
                <input type="text" id="name" name="name" required="required">
                <label for="description">Description</label>
                <textarea type="text" id="description" name="description" required="required"></textarea>
                <label for="address">Adresse</label>
                <input type="text" id="address" name="address" required="required">
              
                <label for="difficulty">Niveau de difficulté</label>
                <select name="difficulty" id="difficulty" required>
                    <option value="Votre niveau"></option>
                        <option value="facile">Facile</option>
                        <option value="intermédiaire">Intermédiaire</option>
                        <option value="difficile">Difficile</option>
                </select>

                <label for="coordinates">Coordonnées</label>
                <input type="text" id="coordinates" name="coordinates" required="required">
                <button type="submit">Créer votre spot</button>
            </form>
        </div>
        </div>
        </div>
    </main>
    <footer>
        <a href="/"><img src="/img/logo-p.png"></a>
        <div>Termes et Conditions - Confidentialité - À propos - Nous contacter</div>
        <div><img src="/img/socialSkieur.png" alt=""></div>
    </footer>
</body>

</html>